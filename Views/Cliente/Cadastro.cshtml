@model ClienteModel;

<h2>Cadastro de Clientes</h2>

<form asp-controller="Cliente" asp-action="Cadastro">
    <input type="hidden"  asp-for="Id" value=" @try{ @ViewBag.Cliente.Id } catch { }" />
    <div class="form-group">
        <label>Nome</label>
        <input type="text" asp-for="Nome" class="form-control" value=" @try{@ViewBag.Cliente.Nome } catch { }"/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>CPF</label>
        <input type="text" asp-for="CPF" class="form-control"  value="@try{@ViewBag.Cliente.CPF } catch { }"/>
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Data de Nascimento</label>
        <input type="text" asp-for="DataNascimento" class="form-control"  value="@try{@ViewBag.Cliente.DataNascimento } catch { }"/>
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Renda Familiar</label>
        <input type="text" asp-for="RendaFamiliar" class="form-control"  value="@try{@ViewBag.Cliente.RendaFamiliar } catch { }"/>
        
    </div>
    
    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>

